// Calculate total cost
function calculateTotalCost(item) {
  const rate = parseFloat(item.rate.replace(/[^0-9.]/g, ''));
  const duration = parseDuration(item.duration);
  const hours = duration / (60 * 60 * 1000);
  return `₹${(rate * hours).toFixed(2)}`;
}

